{% extends 'base.html.twig' %}


{% block body %}
    <div class="row ms-3 mt-3">
        <h4>Filtrer les lieux</h4>
        <form action="">
            <label for="search">Le nom contient : </label>
            <input class="form-control-sm" type="search" name="search" id="search">
            {#            <button class="btn btn-sm btn-info">Rechercher</button>#}
        </form>
    </div>
    <div class="row p-5">
        <div class="col-md-3">
            <table class="table table-striped">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Rue</th>
                    <th scope="col">Latitude</th>
                    <th scope="col">Longitude</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Actions</th>
                </tr>

                {% for venue in venues %}
                    <tr id="{{ venue.name|lower }}">
                        <td id="venue">{{ venue.name }}</td>
                        <td id="street">{{ venue.street }}</td>
                        <td id="latitude">{{ venue.latitude }}</td>
                        <td id="longitude">{{ venue.longitude }}</td>
                        <td id="city">{{ venue.city.name }}</td>
                        <td>
                            <a href="{{ path("app_venue_edit",{"id":venue.id} ) }}">Modifier</a>
                            -
                            <a href="{{ path("app_venue_delete",{"id":venue.id} ) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div class="text-start">
                <a class="btn btn-warning" href="{{ path("app_venue_new") }}">Ajouter</a>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="{{ asset("assets/js/venue.js") }}"></script>
{% endblock %}