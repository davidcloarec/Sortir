{% extends 'base.html.twig' %}

{% block title %}Annuler une sortie{% endblock %}

{% block body %}
<div class="container-sm container-fluid">
    <h1 class="text-center mb-5 mt-2">Annuler une sortie</h1>
    <form action="" method="post" class="d-flex justify-content-center">
        <div class="d-flex col-md-4 col-sm-12 justify-content-center flex-wrap card bg-info-subtle table-bordered">
            <table class="table table-hover table-info table-striped">
                <tr>
                    <td>Nom de l'activit√© :</td>
                    <td>{{ activity.name }}</td>
                </tr>
                <tr>
                    <td>Date de la sortie :</td>
                    <td>{{ activity.startingTime|date }}</td>
                </tr>
                <tr>
                    <td>Campus organisateur :</td>
                    <td>{{ activity.campus.name }}</td>
                </tr>
                <tr>
                    <td>Lieu :</td>
                    <td>{{ activity.venue.name }}</td>
                </tr>
                <tr>
                    <td rowspan="2">Adresse&nbsp:</td>
                    <td>{{ activity.venue.street }}.<br>
                        {{ activity.venue.city.postalCode }}, {{ activity.venue.city.name }}</td>
                </tr>
                <tr></tr>
                <tr>
                    <td>Motif :</td>
                    <td>
                        <textarea name="cancelMotive" id="cancelMotive"></textarea>
                    </td>
                </tr>
            </table>
            <div class="d-flex justify-content-around mb-3">
                <button class="btn btn-success" type="submit">Enregistrer</button>
                <a class="btn btn-danger" href="{{ path('activity_list') }}">Annuler</a>
            </div>
        </div>
    </form>

</div>
{% endblock %}


