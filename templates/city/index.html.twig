{% extends 'base.html.twig' %}

{% block title %}Liste Villes{% endblock %}

{% block body %}
    <div class="row ms-3 mt-3">
        <h4>Filtrer les villes</h4>
        <form action="">
            <label for="search">Le nom contient : </label>
            <input class="form-control-sm" type="search" name="search" id="search">
{#            <button class="btn btn-sm btn-info">Rechercher</button>#}
        </form>
    </div>
    <div class="row p-5">
        <div class="col-md-3" id="no-more-tables">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Ville</th>
                    <th scope="col">Code postal</th>
                    <th scope="col" colspan="2">Actions</th>
                </tr>
            </thead>


            {% for city in cities %}
                <tr id="{{ city.name|lower }}">
                    <td data-title="Ville" id="city">{{ city.name }}</td>
                    <td data-title="Code Postal" id="postalcode">{{ city.postalCode }}</td>
                    <td data-title="Actions">
                        <a class="btn btn-warning" href="{{ path("app_city_edit",{"id":city.id}) }}">Modifier</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path("app_city_delete",{"id":city.id} ) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
            <div class="text-start">
                <a class="btn btn-warning" href="{{ path("app_city_new") }}">Ajouter</a>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="{{ asset("assets/js/city.js") }}"></script>
{% endblock %}