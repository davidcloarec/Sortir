{% extends 'base.html.twig' %}


{% block body %}
    <div class="row ms-3 mt-3">
        <h4>Filtrer les campus</h4>
        <form action="">
            <label for="search">Le nom contient : </label>
            <input class="form-control-sm" type="search" name="search" id="search">
{#            <button class="btn btn-sm btn-info">Rechercher</button>#}
        </form>
    </div>
    <div class="row p-5">
        <div class="col-md-3" id="no-more-tables">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Campus</th>
                    <th scope="col" colspan="2">Actions</th>
                </tr>
            </thead>


            {% for campus in campuses %}
                <tr id="{{ campus.name|lower }}">
                    <td data-title="Campus" id="campus">{{ campus.name }}</td>
                    <td data-title="Actions">
                        <a class="btn btn-warning" href="{{ path("app_campus_edit",{"id":campus.id}) }}">Modifier</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path("app_campus_delete",{"id":campus.id} ) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
            <div class="text-start">
                <a class="btn btn-warning" href="{{ path("app_campus_new") }}">Ajouter</a>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="{{ asset("assets/js/campus.js") }}"></script>
{% endblock %}